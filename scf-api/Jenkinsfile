pipeline {
    agent any
    tools {
        maven '3.8.6'
    }
    
    stages {
        stage('SCM') {
          steps {
            checkout scm
          }
        }
        stage('Build') {
            steps {
                echo 'Build..'
            }
        }
        stage('Test') {
            steps {
                dir('scf-api') {
                  withSonarQubeEnv('SonarQube') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=poc-sistemas-controle-financas'
                  }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}